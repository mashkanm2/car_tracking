Root:
    text_input: text_input
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 80
            TextInput:
                id: text_input
                text: root.result_text

            Button:
                text: 'Load'
                size_hint_y: None
                height: '48dp'
                on_release: root.show_load()
            
            Button:
                text: root.play_btn_text
                size_hint_y: None
                height: '48dp'
                on_press: root.play_video()
            
        
<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
